{
  "name": "vite-fastify-boilerplate",
  "version": "0.0.4",
  "description": "Fastify boilerplate with Vite & Vitest",
  "main": "dist/server.mjs",
  "scripts": {
    "compile-schemas": "json2ts -i src/schemas -o src/types",
    "dev:watch": "cross-env NODE_ENV=development tsx watch src/server.ts",
    "dev": "pnpm compile-schemas && pnpm dev:watch",
    "copy:assets": "cpy 'src/generated/*.json' dist/generated",
    "build": "vite build --outDir dist --ssr src/server.ts",
    "format": "prettier --config .prettierrc \"src/**/*.{js,json,ts,css,scss,vue,html,md}\" --write",
    "start": "yarn build && node dist/server.mjs",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "coverage": "vitest --coverage"
  },
  "keywords": [
    "fastify",
    "vite",
    "vitest",
    "boilerplate",
    "typescript",
    "HMR"
  ],
  "author": "Emmanuel Salomon <emmanuel.salomon@gmail.com> (https://github.com/ManUtopiK)",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@fastify/autoload": "^5.0.0",
    "@fastify/cors": "8.2.0",
    "@fastify/env": "4.1.0",
    "@fastify/jwt": "^6.3.2",
    "@fastify/sensible": "^5.0.0",
    "@fastify/vite": "^3.0.3",
    "close-with-grace": "1.1.0",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.0.3",
    "env-schema": "^5.1.1",
    "fastify": "^4.10.0",
    "fastify-multer": "^2.0.3",
    "fastify-plugin": "^4.0.0",
    "fastify-print-routes": "^2.0.6",
    "glob": "8.0.3",
    "mongodb": "^4.10.0",
    "openapi-types": "^12.0.2",
    "pino": "^8.7.0",
    "pino-pretty": "^9.1.1",
    "swagger-jsdoc": "6.2.5"
  },
  "devDependencies": {
    
    "@fastify/swagger": "^8.1.0",
    "@fastify/swagger-ui": "^1.2.0",
    "@types/node": "^18.11.9",
    "@vitest/coverage-c8": "^0.25.2",
    "@vitest/ui": "^0.25.2",
    "axios": "^0.26.1",
    "c8": "^7.12.0",
    "cross-env": "^7.0.3",
    "json-schema-to-typescript": "11.0.2",
    "supertest": "6.2.4",
    "tsx": "^3.9.0",
    "vite": "^3.2.4",
    "vite-plugin-node": "^1.0.0",
    "vitest": "^0.25.2"
  }
}